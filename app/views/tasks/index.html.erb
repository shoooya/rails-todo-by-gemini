<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<%= link_to "New task", new_task_path %>

<div id="tasks">
  <% @tasks.each do |task| %>
    <div>
      <span style="<%= 'text-decoration: line-through;' if task.completed? %>">
        <%= task.title %>
      </span>
      <%= button_to "Toggle", toggle_task_path(task), method: :patch %>
      <%= link_to "Show", task %>
      <%= link_to "Edit", edit_task_path(task) %>
      <%= button_to "Destroy", task, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>
</div>